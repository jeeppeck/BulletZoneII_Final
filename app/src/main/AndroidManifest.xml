<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="edu.unh.cs.cs619_2014_project2.g6" >

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.VIBRATE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-sdk android:minSdkVersion="19"/>

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity_"
            android:label="@string/app_name"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".PlayGame_"
            android:label="@string/title_activity_play_game"
            android:parentActivityName="edu.unh.cs.cs619_2014_project2.g6.MainActivity"
            android:screenOrientation="landscape" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="edu.unh.cs.cs619_2014_project2.g6.MainActivity" />
        </activity>
        <activity
            android:name=".RePlayGame_"
            android:label="@string/title_activity_replay_game"
            android:parentActivityName="edu.unh.cs.cs619_2014_project2.g6.MainActivity"
            android:screenOrientation="landscape" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="edu.unh.cs.cs619_2014_project2.g6.MainActivity" />
        </activity>
        <activity
            android:name=".SelectCharacter_"
            android:label="Select Character"
            android:parentActivityName="edu.unh.cs.cs619_2014_project2.g6.MainActivity"
            android:screenOrientation="landscape"
            android:noHistory="true">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="edu.unh.cs.cs619_2014_project2.g6.MainActivity"/>
            </activity>
    </application>

</manifest>
